<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ll_notification_background"
    android:layout_margin="6dp"
    android:elevation="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/ivNotificationLogo"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/ivNotificationLogo"
        android:layout_toEndOf="@+id/ivNotificationLogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is notification content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvNotificationTitle"
        android:layout_toEndOf="@+id/ivNotificationLogo"
        android:id="@+id/tvNotificationContent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 May 23:59"
        android:textSize="12sp"
        android:id="@+id/tvTime"
        android:layout_above="@+id/tvNotificationTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

</RelativeLayout>